<%= form_for(@report) do |f| %>
    <div class="datefield_from">
      <%= f.label 'Begining' %><br>
      <%= f.text_field :date_from, :id => "date_from", :name => "date_from", :value => @date_from.to_date %>
    </div>
    <div class="datefield_to">
      <%= f.label 'End of period' %><br>
      <%= f.text_field :date_to, :id => "date_to", :name => "date_to", :value => @date_to.to_date %>
    </div>
    <div class="actions">
      <%= f.submit "Select" %>
    </div>
<% end %>
<script>
    $('#date_to, #date_from').datepicker({format: 'yyyy-mm-dd'});
</script>