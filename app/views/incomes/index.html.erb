<h1>Список транзакций <%= @anc %></h1>
<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Name</th>
      <th>Cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @incomes.each do |income| %>
      <tr>
        <% @cat_names.each do |cat_name| %>
            <% if  income.category_id == cat_name.id %>
                <td><%= cat_name.name %></td>
            <% end %>
        <% end %>
        <td><%= link_to income.name, incomes_path(i_name: income.name) %>>
        <td><%= income.cost %></td>
        <!--<td><%= link_to 'Show', income %></td>-->
        <td><%= link_to 'Редактировать', edit_income_path(income) %></td>
        <td><%= link_to 'Удалить', income, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить новую запись', new_income_path %>
