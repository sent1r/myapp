<h1>Перечень категорий</h1>
<p>
  <%= link_to 'Создать категорию', new_category_path %>
  <%= link_to 'На главную', controller: "home", action: "index" %>
</p>
<table>
  <thead>
    <tr>
      <th>Наименование</th>
      <th>Доход/расход</th>
      <th>Действия</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <% if category.is_income == 1 %>
            <td>Доходы</td>
        <% else %>
            <td>Расходы</td>
        <% end %>
        <td>
          <%= link_to 'Редактировать', edit_category_path(category) %>
          <%= link_to 'Удалить', category, method: :delete, data: { confirm: 'Вы уверены?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
